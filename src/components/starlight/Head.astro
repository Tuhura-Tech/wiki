---
import type { StarlightRouteData } from '@astrojs/starlight/route-data';
import Default from '@astrojs/starlight/components/Head.astro';

const { lang } = Astro.locals.starlightRoute;

const imageSrc = '/default-og-image.png';
const canonicalImageSrc = new URL(imageSrc, Astro.site);
---

<Default {...Astro.locals.starlightRoute}><slot /></Default>
<meta property="og:image" content={canonicalImageSrc} />
<meta name="twitter:image" content={canonicalImageSrc} />

<!-- Algolia docsearch language facet -->
<meta name="docsearch:language" content={lang} />
<meta name="twitter:site" content="tuhuratech" />
